                  <td class="c16">@Model.Letterer</td>
                </tr>

                <tr>
                  <td class="c15">Cover Artist:</td>
                  <td class="c16">@Model.CoverArtist</td>
                </tr>

                <tr>
                  <td class="c15">Editor:</td>
                  <td class="c16">@Model.Editor</td>
                </tr>
              </tbody>
            </table>
            <hr>

